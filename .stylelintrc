{
  "extends": "stylelint-config-recommended",
  "ignoreAtRules": ["mixin", "include"],
  "ignoreFiles": ["**/normalize.scss"],
  "rules": {
    "indentation": 4,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["mixin", "include"]
      }
    ],
    "block-no-empty": null,
    "no-descending-specificity": null,
    "unit-whitelist": ["em", "rem", "s", "%", "deg", "px", "vh", "fr"]
  }
}
