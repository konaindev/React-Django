{
    "$ref": "#/definitions/CampaignPlan",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "CampaignPlan": {
            "properties": {
                "overview": {
                    "$ref": "#/definitions/Overview"
                }
            },
            "required": [
                "overview"
            ],
            "type": "object"
        },
        "InvestmentExpenses": {
            "description": "Marketing investment expense buckets",
            "properties": {
                "demand_creation": {
                    "type": "string"
                },
                "leasing_enablement": {
                    "type": "string"
                },
                "market_intelligence": {
                    "type": "string"
                },
                "reputation_building": {
                    "type": "string"
                }
            },
            "required": [
                "demand_creation",
                "leasing_enablement",
                "market_intelligence",
                "reputation_building"
            ],
            "type": "object"
        },
        "Objective": {
            "properties": {
                "description": {
                    "description": "A detailed description, in markdown",
                    "type": "string"
                },
                "title": {
                    "description": "The primary title for the objective ('Reputation Building')",
                    "type": "string"
                }
            },
            "required": [
                "description",
                "title"
            ],
            "type": "object"
        },
        "Overview": {
            "properties": {
                "assumptions": {
                    "description": "Campaign assumptions",
                    "type": "string"
                },
                "goal": {
                    "description": "The overall campaign goal ('achieve lease-up')",
                    "type": "string"
                },
                "objectives": {
                    "description": "Campaign objectives",
                    "items": {
                        "$ref": "#/definitions/Objective"
                    },
                    "type": "array"
                },
                "schedule": {
                    "description": "Description of the schedule ('Begins in late may 2019')",
                    "type": "string"
                },
                "target": {
                    "description": "Target investment, total",
                    "type": "string"
                },
                "target_investment": {
                    "$ref": "#/definitions/InvestmentExpenses",
                    "description": "Target investment, per-tactic"
                },
                "target_segments": {
                    "description": "The target segments, in order from most important to least",
                    "items": {
                        "$ref": "#/definitions/TargetSegment"
                    },
                    "type": "array"
                },
                "theme": {
                    "description": "The overall campaign theme ('Variable by audience and segment')",
                    "type": "string"
                }
            },
            "required": [
                "assumptions",
                "goal",
                "objectives",
                "schedule",
                "target",
                "target_investment",
                "target_segments",
                "theme"
            ],
            "type": "object"
        },
        "TargetSegment": {
            "properties": {
                "description": {
                    "description": "A description of the segment ('Young Professionals')",
                    "type": "string"
                },
                "ordinal": {
                    "description": "A description of ordered importance ('primary', 'tertiary')",
                    "type": "string"
                }
            },
            "required": [
                "description",
                "ordinal"
            ],
            "type": "object"
        }
    }
}

