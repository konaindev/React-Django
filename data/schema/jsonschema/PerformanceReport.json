{
    "$ref": "#/definitions/PerformanceReport",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Investment": {
            "description": "Overall investment picture",
            "properties": {
                "expenses": {
                    "$ref": "#/definitions/InvestmentExpenses",
                    "description": "Breakdown of money spent on marketing"
                },
                "outcomes": {
                    "$ref": "#/definitions/InvestmentOutcomes",
                    "description": "Breakdown of investment outcomes."
                }
            },
            "type": "object"
        },
        "InvestmentExpenses": {
            "description": "Marketing investment expense buckets",
            "properties": {
                "demand_creation": {
                    "type": "string"
                },
                "leasing_enablement": {
                    "type": "string"
                },
                "market_intelligence": {
                    "type": "string"
                },
                "reputation_building": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "InvestmentOutcomes": {
            "description": "Investment outcomes",
            "properties": {
                "estimated_revenue_gain": {
                    "description": "The estimated revenue gain as a function of monthly rent",
                    "type": "string"
                },
                "romi": {
                    "description": "The return on investment",
                    "type": "integer"
                },
                "total": {
                    "description": "The total spent across all buckets",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "PerformanceReport": {
            "properties": {
                "acquisition": {
                    "$ref": "#/definitions/Investment",
                    "description": "Investment and returns for the acquisition funnel"
                },
                "foo": {
                    "type": "number"
                },
                "investment": {
                    "$ref": "#/definitions/Investment",
                    "description": "Total investment and returns across all funnels"
                },
                "retention": {
                    "$ref": "#/definitions/Investment",
                    "description": "Investment and returns for the retention funnel"
                }
            },
            "type": "object"
        }
    }
}

